<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/activity_login_layout">

    <LinearLayout
        android:id="@+id/header_title"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:weightSum="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="0.5"
            android:weightSum="1">
            <Button
                android:id="@+id/login_page_selector"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Login"
                android:background="@drawable/default_selector"
                android:textSize="20dp"
                android:layout_weight="1"
                android:textAlignment="center"
                android:gravity="center_vertical"
                />
            <TextView
                android:id="@+id/login_button_selected_marker"
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:background="@color/peachColor"/>
        </LinearLayout>

        <!--<TextView-->
            <!--android:layout_width="1dp"-->
            <!--android:layout_marginTop="20dp"-->
            <!--android:layout_marginBottom="20dp"-->
            <!--android:layout_height="match_parent"-->
            <!--android:background="@color/colorGray"-->
            <!--android:layout_centerHorizontal="true"-->
            <!--android:layout_below="@+id/login_email_edit_text"/>-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="0.5"
            android:weightSum="1">
            <Button
                android:id="@+id/signup_page_selector"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Signup"
                android:background="@drawable/default_selector"
                android:textSize="20dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:textAlignment="center"
                />
            <TextView
                android:id="@+id/signup_button_selected_marker"
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:background="@color/peachColor"
                android:visibility="gone"/>
        </LinearLayout>



    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/header_title">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="20dp"
            android:id="@+id/login_relative_layout"
            android:visibility="visible">

            <TextView
                android:id="@+id/login_email_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:textColor="@color/coolGrayColor"
                android:layout_marginLeft="20dp"
                android:text="E-mail"
                android:visibility="invisible"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:inputType="textEmailAddress"
                android:id="@+id/login_email_edit_text"
                android:hint="@string/email_address_hint"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:textSize="14dp"
                android:textColor="@color/colorPrimaryDark"
                android:background="@drawable/default_selector"
                android:paddingLeft="5dp"
                android:layout_below="@+id/login_email_text_view"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:background="@color/colorPrimary"
                android:id="@+id/email_color_strip"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/login_email_edit_text"/>
            <!--<ImageView-->
            <!--android:layout_width="30dp"-->
            <!--android:layout_height="30dp"-->
            <!--android:src="@drawable/mail_icon"-->
            <!--android:layout_alignLeft="@+id/imageView"-->
            <!--android:layout_alignStart="@+id/imageView"-->
            <!--android:layout_alignTop="@+id/login_email_edit_text"-->
            <!--android:id="@+id/imageView2"-->
            <!--android:layout_alignBottom="@+id/login_email_edit_text" />-->

            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textSize="14dp"
                android:background="@drawable/default_selector"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:textColor="@color/colorPrimaryDark"
                android:inputType="textPassword"
                android:id="@+id/login_password_edit_text"
                android:hint="@string/password_hint"
                android:layout_below="@+id/login_password_text_view"
                android:paddingLeft="5dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="5dp"
                android:background="@color/colorPrimary"
                android:id="@+id/password_color_strip"
                android:layout_below="@+id/login_password_edit_text"/>
            <!--<ImageView-->
            <!--android:layout_width="30dp"-->
            <!--android:layout_height="30dp"-->
            <!--android:src="@drawable/lock_icon"-->
            <!--android:layout_alignLeft="@+id/login_password_edit_text"-->
            <!--android:layout_alignStart="@+id/login_password_edit_text"-->
            <!--android:id="@+id/imageView"-->
            <!--android:layout_marginLeft="10dp"-->
            <!--android:layout_marginRight="10dp"-->
            <!--android:layout_below="@+id/login_email_edit_text"-->
            <!--android:layout_alignBottom="@+id/login_password_edit_text" />-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:layout_marginLeft="20dp"
                android:text="Password"
                android:textColor="@color/coolGrayColor"
                android:id="@+id/login_password_text_view"
                android:layout_below="@+id/login_email_edit_text"
                android:visibility="invisible"/>

            <RelativeLayout
                android:id="@+id/google_facebook_login_linear_layout"
                android:layout_marginBottom="140dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_alignParentBottom="true">

                <Button
                    android:id="@+id/google_sign_in_button"
                    android:layout_width="35dip"
                    android:layout_height="35dip"
                    android:background="@drawable/common_google_signin_btn_icon_light"
                    android:layout_alignParentTop="true"
                    android:layout_toLeftOf="@+id/facebook_sign_in_button"
                    android:layout_toStartOf="@+id/facebook_sign_in_button" />

                <Button
                    android:id="@+id/facebook_sign_in_button"
                    android:layout_width="35dip"
                    android:layout_height="35dip"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/facebook_circle_icon_no_margin"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true" />


                <!--<com.facebook.login.widget.LoginButton-->
                <!--xmlns:fb="http://schemas.android.com/apk/res-auto"-->
                <!--android:id="@+id/login_button"-->
                <!--android:layout_width="249dp"-->
                <!--android:layout_height="45dp"-->
                <!--android:layout_above="@+id/textView1"-->
                <!--android:layout_centerHorizontal="true"-->
                <!--android:layout_gravity="center_horizontal"-->
                <!--android:layout_marginBottom="30dp"-->
                <!--android:layout_marginTop="30dp"-->
                <!--android:contentDescription="@string/login_desc"-->
                <!--android:scaleType="centerInside"-->
                <!--fb:login_text=""-->
                <!--fb:logout_text=""/>-->

            </RelativeLayout>
        </RelativeLayout>

    </ScrollView>
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header_title">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="20dp"
            android:id="@+id/signup_relative_layout"
            android:visibility="gone">
            <TextView
                android:id="@+id/signup_first_name_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:textColor="@color/coolGrayColor"
                android:layout_marginLeft="20dp"
                android:text="First Name"
                android:visibility="invisible"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1"
                android:orientation="horizontal"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:id="@+id/first_name_linear_layout"
                android:layout_below="@+id/signup_first_name_text_view">
                <EditText
                    android:layout_width="260dp"
                    android:layout_height="40dp"
                    android:inputType="textCapWords"
                    android:paddingLeft="5dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:background="@drawable/default_selector"
                    android:id="@+id/signup_first_name_edit_text"
                    android:hint="First Name"
                    android:textSize="14dp" />
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:background="@color/colorPrimary"
                android:id="@+id/first_name_color_strip"
                android:layout_below="@+id/first_name_linear_layout"/>
            <TextView
                android:id="@+id/signup_last_name_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:textColor="@color/coolGrayColor"
                android:layout_marginLeft="20dp"
                android:text="Last Name"
                android:visibility="invisible"
                android:layout_below="@+id/first_name_linear_layout"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1"
                android:orientation="horizontal"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:id="@+id/last_name_linear_layout"
                android:layout_below="@+id/signup_last_name_text_view">
                <EditText
                    android:layout_width="257dp"
                    android:layout_height="40dp"
                    android:inputType="textCapWords"
                    android:paddingLeft="5dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:background="@drawable/default_selector"
                    android:id="@+id/signup_last_name_edit_text"
                    android:hint="Last Name"
                    android:textSize="14dp" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:background="@color/colorPrimary"
                android:id="@+id/last_name_color_strip"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/last_name_linear_layout"/>
            <TextView
                android:id="@+id/signup_email_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:textColor="@color/coolGrayColor"
                android:layout_marginLeft="20dp"
                android:text="Email"
                android:visibility="invisible"
                android:layout_below="@+id/last_name_linear_layout"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:inputType="textEmailAddress"
                android:background="@drawable/default_selector"
                android:id="@+id/signup_email_edit_text"
                android:hint="E-mail"
                android:paddingLeft="5dp"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="14dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_below="@+id/signup_email_text_view"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:background="@color/colorPrimary"
                android:id="@+id/signup_email_color_strip"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/signup_email_edit_text"/>
            <TextView
                android:id="@+id/signup_password_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:textColor="@color/coolGrayColor"
                android:layout_marginLeft="20dp"
                android:text="Password"
                android:visibility="invisible"
                android:layout_below="@+id/signup_email_edit_text"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textSize="14dp"
                android:paddingLeft="5dp"
                android:inputType="textPassword"
                android:background="@drawable/default_selector"
                android:id="@+id/signup_password_edit_text"
                android:hint="@string/password_hint"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:textColor="@color/colorPrimaryDark"
                android:layout_below="@+id/signup_password_text_view" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:background="@color/colorPrimary"
                android:id="@+id/signup_password_color_strip"
                android:layout_below="@+id/signup_password_edit_text"/>

            <!--<ImageView-->
            <!--android:layout_width="30dp"-->
            <!--android:layout_height="30dp"-->
            <!--android:src="@drawable/lock_icon"-->
            <!--android:layout_alignLeft="@+id/signup_password_edit_text"-->
            <!--android:layout_alignStart="@+id/signup_password_edit_text"-->
            <!--android:layout_marginLeft="10dp"-->
            <!--android:layout_marginRight="10dp"-->
            <!--android:layout_below="@+id/signup_email_edit_text"-->
            <!--android:layout_alignBottom="@+id/signup_password_edit_text" />-->

            <ImageView
                android:id="@+id/user_profile_pic"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/user_icon"
                android:layout_alignRight="@+id/first_name_linear_layout"
                android:layout_alignEnd="@+id/first_name_linear_layout"
                android:layout_alignBottom="@+id/last_name_linear_layout"
                android:layout_alignTop="@+id/signup_first_name_text_view"/>

        </RelativeLayout>
    </ScrollView>

    <Button
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:textSize="16dp"
        android:text="Login"
        android:layout_weight="0.5"
        android:textColor="@android:color/white"
        android:background="@drawable/button_selector"
        android:id="@+id/login_button"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:textSize="16dp"
        android:text="SignUp"
        android:visibility="gone"
        android:textColor="@android:color/white"
        android:background="@drawable/button_selector"
        android:id="@+id/signup_button"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>