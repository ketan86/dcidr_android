<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.example.turbo.dcidr.utils.image_utils.rounded_image_view.CircularImageView
        android:id="@+id/user_profile_pic"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/user_icon"
        app:siBorderWidth="0dp"
        app:siBorderColor="@color/md_gray_400"
        android:backgroundTint="@color/md_gray_200"
        />
    <ImageView
        android:id="@+id/contact_type_image_view"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/facebook_circle_icon"
        android:layout_alignRight="@+id/user_profile_pic"
        android:layout_alignBottom="@+id/user_profile_pic"
        />
    <!--<com.example.turbo.dcidr.utils.progress_bar_utils.DottedProgressBar-->
        <!--android:id="@+id/progress"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="0dp"-->
        <!--android:layout_marginRight="10dp"-->
        <!--android:layout_marginLeft="10dp"-->
        <!--app:activeDot="@drawable/active_dot"-->
        <!--app:dotSize="5dp"-->
        <!--app:inactiveDot="@drawable/inactive_dot"-->
        <!--app:jumpingSpeed="670"-->
        <!--app:spacing="3dp"-->
        <!--android:layout_centerVertical="true"-->
        <!--android:layout_toLeftOf="@+id/user_name"-->
        <!--android:layout_toStartOf="@+id/user_name" />-->


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Jonh Marker"
        android:id="@+id/user_name"
        android:textSize="14dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/user_profile_pic"
        android:layout_marginRight="80dp"
        />

    <TextView
        android:id="@+id/user_email_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="abc@gmail.com"
        android:ellipsize="end"
        android:singleLine="true"
        android:layout_alignLeft="@id/user_name"
        android:layout_below="@id/user_name"
        android:layout_marginRight="80dp"/>

    <Button
        android:id="@+id/invite_button"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:background="@drawable/contact_invite_button_selector"
        android:text="INVITE"
        android:textColor="@color/md_blue_400"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/contacts_list_view_divider"
        android:layout_alignEnd="@+id/contacts_list_view_divider" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignLeft="@+id/user_name"
        android:background="@color/md_gray_400"
        android:layout_marginTop="70dp"
        android:id="@+id/contacts_list_view_divider" />
</RelativeLayout>