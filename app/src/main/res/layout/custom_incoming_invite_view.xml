<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="1">

    <android.support.v7.widget.CardView
        android:layout_width="150dp"
        android:layout_height="175dp"
        app:cardElevation="2dp"
        android:layout_margin="10dp"
        android:layout_below="@+id/incoming_invitation_image_view"
        android:layout_centerHorizontal="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <View
                android:background="@color/md_gray_200"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:id="@+id/view"
                android:layout_alignBottom="@+id/contact_profile_pic"
                android:layout_marginBottom="34dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
            <com.example.turbo.dcidr.utils.image_utils.rounded_image_view.CircularImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/user_icon"
                android:scaleType="centerCrop"
                app:siBorderWidth="0dp"
                app:siBorderColor="@color/md_gray_200"
                android:id="@+id/contact_profile_pic"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/contact_name"
                android:text="Joe Smith"
                android:textSize="12dp"
                android:textColor="@color/md_gray_1100"
                android:gravity="center_vertical"
                android:textAlignment="center"
                android:padding="10dp"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/contact_profile_pic" />

            <View
                android:background="@color/md_gray_200"
                android:layout_width ="1dp"
                android:layout_height="wrap_content"
                android:id="@+id/button_separator"
                android:layout_centerHorizontal="true"
                android:layout_alignTop="@id/accept_invite_button" />
